{
  "name": "clipboard-plus",
  "version": "1.0.0",
  "description": "Smart clipboard manager with auto-tagging",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win --publish never"
  },
  "author": "Clipboard+ Team",
  "license": "MIT",
  "build": {
    "appId": "com.clipboardplus.app",
    "productName": "Clipboard+",
    "icon": "logo.ico",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Clipboard+",
      "installerIcon": "logo.ico",
      "uninstallerIcon": "logo.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "uuid": "^9.0.0"
  }
}